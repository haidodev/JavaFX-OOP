<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.scene.web.WebView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.app.dict.controllers.MainController"
            prefHeight="600.0" prefWidth="857.0"
            stylesheets="@style/navigation.css">
    <VBox alignment="CENTER" prefHeight="71.0" prefWidth="57.0">
        <Button contentDisplay="TOP" mnemonicParsing="false" prefHeight="67.0" prefWidth="77.0" textFill="#b54848">
            <styleClass>
                <String fx:value="button-favicon"/>
                <String fx:value="text-navi-bar"/>
            </styleClass>
        </Button>
    </VBox>
    <VBox alignment="CENTER" layoutX="-1.0" layoutY="71.0" prefHeight="237.0" prefWidth="57.0">
        <Button fx:id="thoiKyBtn" contentDisplay="TOP" mnemonicParsing="false" onAction="#showThoiKyPane"
                prefHeight="58.0" prefWidth="57.0" text="Thời Kỳ" textFill="#8e9297">
            <font>
                <Font size="7.0"/>
            </font>
            <styleClass>
                <String fx:value="text-navi-bar"/>
                <String fx:value="button-thoi-ky"/>
            </styleClass>
        </Button>
        <Button fx:id="nhanVatBtn" contentDisplay="TOP" mnemonicParsing="false" onAction="#showNhanVatPane"
                prefHeight="58.0" prefWidth="57.0" text="Nhân Vật" textFill="#8e9297">
            <font>
                <Font size="7.0"/>
            </font>
            <styleClass>
                <String fx:value="text-navi-bar"/>
                <String fx:value="button-nhan-vat"/>
            </styleClass>
        </Button>
        <Button fx:id="suKienBtn" contentDisplay="TOP" mnemonicParsing="false" onAction="#showSuKienPane"
                prefHeight="58.0" prefWidth="57.0" text="Sự Kiện" textFill="#47586b">
            <font>
                <Font size="7.0"/>
            </font>
            <styleClass>
                <String fx:value="text-navi-bar"/>
                <String fx:value="button-su-kien"/>
            </styleClass>
        </Button>
        <Button fx:id="diTichBtn" contentDisplay="TOP" mnemonicParsing="false" onAction="#showDiTichPane"
                prefHeight="58.0" prefWidth="57.0" text="Di Tích" textFill="#8e9297">
            <font>
                <Font size="7.0"/>
            </font>
            <styleClass>
                <String fx:value="text-navi-bar"/>
                <String fx:value="button-di-tich"/>
            </styleClass>
        </Button>
        <Button fx:id="leHoiBtn" contentDisplay="TOP" mnemonicParsing="false" onAction="#showLeHoiPane"
                prefHeight="58.0" prefWidth="57.0" text="Lễ Hội" textFill="#8e9297">
            <font>
                <Font size="7.0"/>
            </font>
            <styleClass>
                <String fx:value="text-navi-bar"/>
                <String fx:value="button-le-hoi"/>
            </styleClass>
        </Button>
    </VBox>
    <VBox alignment="CENTER" prefHeight="22.0" prefWidth="57.0" AnchorPane.bottomAnchor="5.0"
          AnchorPane.leftAnchor="0.0">
        <Button fx:id="settingButton" contentDisplay="TOP" mnemonicParsing="false" onAction="#showLeHoiPane"
                prefHeight="36.0" prefWidth="57.0" textFill="#8e9297">
            <font>
                <Font size="7.0"/>
            </font>
            <styleClass>
                <String fx:value="text-navi-bar"/>
                <String fx:value="button-setting"/>
            </styleClass>
        </Button>
    </VBox>
    <AnchorPane fx:id="mainContent" layoutX="57.0" prefHeight="600.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="57.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <AnchorPane layoutY="-3.0" prefHeight="459.0" prefWidth="257.0" styleClass="second-color" AnchorPane.bottomAnchor="3.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="-3.0">
            <TextField fx:id="searchField" layoutX="19.0" layoutY="18.0" onKeyReleased="#thoiKySearchFieldAction" prefHeight="35.0" prefWidth="219.0" promptText="Tra từ" />
            <VBox layoutX="19.0" layoutY="58.0" prefHeight="525.0" prefWidth="219.0" style="-fx-background-radius: 3;" styleClass="third-color" AnchorPane.bottomAnchor="17.0" AnchorPane.leftAnchor="19.0" AnchorPane.topAnchor="58.0">
                <ListView fx:id="listView" onMouseClicked="#showThoiKyDetail" prefHeight="529.0" prefWidth="236.0" style="-fx-background-color: none;" />
            </VBox>
        </AnchorPane>
        <ScrollPane layoutX="254.0" layoutY="14.0" prefHeight="565.0" prefWidth="492.0" style="-fx-background-radius: 3;"
                    styleClass="first-color">
            <VBox>
                <Label layoutX="25.0" layoutY="17.0" prefHeight="40.0" prefWidth="390.0" styleClass="title-meaning"
                       text="Thời Kỳ Lịch Sử" textFill="#902929">
                    <style>
                        -fx-font-weight: bold;
                    </style>
                    <font>
                        <Font size="10.0"/>
                    </font>
                </Label>
                <AnchorPane layoutX="10.0" layoutY="87.0"  prefWidth="472.0"
                            AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
                            AnchorPane.topAnchor="87.0">
                    <WebView fx:id="definitionView" prefHeight="478.0" prefWidth="473.0"
                             AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                             AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                </AnchorPane>
                <Button text="Chọn ADV" onAction="#handleNhanVatLienQuanBtn"/>


                <Button text="Add Label" onAction="#handleButtonClick2"/>
                <VBox fx:id="contentVBox" spacing="10.0"/>

            </VBox>
        </ScrollPane>
    </AnchorPane>

</AnchorPane>
